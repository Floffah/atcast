{
    "lexicon": 1,
    "id": "live.atcast.show.episode",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record containing a AtCast podcast episode.",
            "key": "any",
            "record": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the episode.",
                        "maxLength": 256,
                        "minLength": 5
                    },
                    "description": {
                        "type": "string",
                        "description": "The description of the episode.",
                        "maxLength": 1024
                    },
                    "publishedAt": {
                        "type": "string",
                        "description": "The time of the show creation.",
                        "format": "datetime"
                    }
                }
            }
        }
    }
}
